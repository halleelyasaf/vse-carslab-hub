[Unit]
Description=Podman picofish for ts-hub-cp-03

[Service]
Restart=on-failure
ExecStartPre=/usr/bin/rm -f /%t/%n-pid /%t/%n-cid
ExecStart=/usr/bin/podman run --conmon-pidfile /%t/%n-pid --cidfile /%t/%n-cid \
		-d -p 9006:9000 --replace \
		--name ts-hub-cp-03 \
		-e HOST=10.19.110.6 -e USERNAME=ADMIN -e PASSWORD=ADMIN \
		quay.io/rhsysdeseng/picofish:latest
ExecStop=/usr/bin/podman stop -t 10 ts-hub-cp-03
ExecStopPost=/usr/bin/sh -c "/usr/bin/podman rm -f `cat /%t/%n-cid`"
KillMode=none
Type=forking
PIDFile=/%t/%n-pid

[Install]
WantedBy=default.target
